@model IEnumerable<OnlineSMS.Models.DataModels.Post>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="chat" style="margin-left:200px">
    <div class="header-chat">
        <i class="icon fa fa-user-o" aria-hidden="true"></i>
        <p class="name">Megan Leib</p>

    </div>
    <div data-spy="scroll" data-target="#list-example" data-offset="0" class="scrollspy-example">
        <div class="messages-chat" style="height:610px">

            @foreach (var item in Model)
            {
                <div style="box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23); ">
                    <div class="message " style="padding:12px">
                        <div class="photo" style="background-image: url(https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
                        </div>
                        <h6 style="margin-left:10px">@item.Acc.FullName</h6>
                        <span style="margin-left:300px">@item.CreatedAt</span>
                        <br />
                    </div>
                    <div style="padding :12px">
                        <span>
                            @item.Content
                        </span>
                    </div>
                    <div style="padding :12px 0px">
                        <img src="~/images/Post/@item.Image" width="100%" />
                    </div>
                </div>
            }
        </div>
    </div>
</section>

