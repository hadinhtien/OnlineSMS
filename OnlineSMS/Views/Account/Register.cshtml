@model OnlineSMS.Models.ViewModels.AccountViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Login/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Main css -->
    <link rel="stylesheet" href="~/Login/css/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" asp-action="Register" class="register-form" id="register-form">
                            <div class="form-group mb-1">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="FullName" id="name" placeholder="Full Name" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>

                            <div class="form-group mb-1 mt-3">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="text" asp-for="Email" id="email" placeholder="Your Email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <span class="text-danger">@TempData["email"]</span>

                            <div class="form-group mb-1 mt-3">
                                <label for="phone"><i class="zmdi zmdi-phone material-icons-phone"></i></label>
                                <input type="text" asp-for="Phone" id="name" placeholder="Phone Number" />
                            </div>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                            <span class="text-danger">@TempData["phone"]</span>

                            <div class="form-group mb-1 mt-3">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Password" id="pass" placeholder="Password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <div class="form-group mb-1 mt-3">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" asp-for="ConfirmPassword" id="re_pass" placeholder="Repeat your password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Sign up" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Login/images/signup-image.jpg" alt="sing up image"></figure>
                        <a asp-controller="Account" asp-action="Index" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="~/Login/vendor/jquery/jquery.min.js"></script>
    <script src="~/Login/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>